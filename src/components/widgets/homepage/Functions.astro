---
import { homeData } from '../../../endpoints.js';
const res = await fetch(homeData);
const [page] = await res.json();
const column_1 = await page.acf.layouts[0].column_1;
const column_2 = await page.acf.layouts[0].column_2;
const column_3 = await page.acf.layouts[0].column_3;
---

<style>
  @media screen and (min-width: 768px) {
    section {
      background: white url('../../../assets/images/tled-group-photo.jpg') center no-repeat;
    }
  }
</style>
<section class="w-full functions my-8">
  <div class="md:grid md:grid-cols-3 justify-between text-base max-w-5xl mx-auto pb-12 pt-12">
    <div class="md:max-w-80 w-72 bg-white p-5">
      <Fragment set:html={column_1} />
    </div>
    <div class="md:max-w-80 w-72 bg-white p-5">
      <Fragment set:html={column_2} />
    </div>
    <div class="md:max-w-80 w-72 bg-white p-5">
      <Fragment set:html={column_3} />
    </div>
  </div>
</section>
