---
const { content, sidebar, title, background, background_color } = Astro.props;
const bgColor = background === 'Color' ? `background-color: ${background_color};` : '';
---

<div class="md:flex">
  <div class="basis-1/3" style={bgColor}>
    <aside class="p-4" set:html={sidebar} />
  </div>
  <div class="basis-2/3 px-8">
    <h1 class="text-3xl font-bold uppercase">{title}</h1>
    <section set:html={content} />
  </div>
</div>
